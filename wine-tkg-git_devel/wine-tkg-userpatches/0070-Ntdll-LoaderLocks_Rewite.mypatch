     {
@@ -1925,7 +1971,7 @@ NTSTATUS WINAPI LdrEnumerateLoadedModules( void *unknown, LDRENUMPROC callback,
         callback( mod, context, &stop );
         if (stop) break;
     }
-
+    RtlLeaveCriticalSection( &loader_section );
     unlock_loader();
     return STATUS_SUCCESS;
 }
